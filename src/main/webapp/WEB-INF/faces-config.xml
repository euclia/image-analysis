<?xml version="1.0" encoding="UTF-8"?>
<!-- This file is not required if you don't need any extra configuration. -->
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="
        http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <managed-bean>
        <managed-bean-name>indexController</managed-bean-name>
        <managed-bean-class>web.SphericalController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>ridgeController</managed-bean-name>
        <managed-bean-class>web.NanotubesController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>agglomeratesController</managed-bean-name>
        <managed-bean-class>web.AgglomerateController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <display-name>Spherical Particles</display-name>
        <from-view-id>spherical.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>Spherical Report</from-outcome>
            <to-view-id>spherical_result.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>Nanotubes</display-name>
        <from-view-id>nanotubes.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>Nanotubes Report</from-outcome>
            <to-view-id>nanotubes_result.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <display-name>Agglomerates</display-name>
        <from-view-id>agglomerates.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>Agglomerates Report</from-outcome>
            <to-view-id>agglomerates_result.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>